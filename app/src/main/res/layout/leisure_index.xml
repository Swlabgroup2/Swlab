<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.swlab.myapplication.Main_Activity">

        <Button
            android:id="@+id/theater_btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="99dp"
            android:background="@android:color/holo_orange_light"
            android:text="@string/theater"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/exhibition_btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="99dp"
            android:background="@android:color/holo_blue_light"
            android:text="@string/exhibition"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/theater_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/speech_btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_green_light"
            android:text="@string/speech"
            app:layout_constraintHorizontal_bias="0.392"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/theater_btn"
            app:layout_constraintTop_toBottomOf="@+id/exhibition_btn" />

        <Button
            android:id="@+id/article_btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="?android:attr/textColorLinkInverse"
            android:text="@string/article"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theater_btn" />
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
    android:id="@+id/nav_home"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:menu="@menu/navigation_menu"></android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>